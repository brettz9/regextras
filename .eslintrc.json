{
  "extends": "standard",
  "parserOptions": {
      "sourceType": "module"
  },
  "overrides": [{
      "files": "test/**.js",
      "env": {
          "mocha": true
      }
  }],
  "rules": {
    "semi": [2, "always"],
    "indent": ["error", 4, {"outerIIFEBody": 0}],
    "object-property-newline": 0,
    "one-var": 0,
    "no-var": 2,
    "prefer-const": 2,
    "object-curly-spacing": 0
  }
}
